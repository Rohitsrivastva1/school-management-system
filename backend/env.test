# Test Environment Variables
NODE_ENV=test
PORT=3001

# Test Database URL
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/school_management_test"

# JWT Secrets for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing-only
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (Optional for testing)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test-password
FROM_EMAIL=noreply@testschool.com
FROM_NAME=Test School

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/test

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
